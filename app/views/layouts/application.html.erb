<!DOCTYPE html>
<html>
<head>
  <title><%= home_hash[:title] %> <%= yield :title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale = 1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="Author" content="<%= home_hash[:author] %>">
  <link rel="dns-prefetch" href="//ssl.google-analytics.com">
  <link rel="dns-prefetch" href="//s3.amazonaws.com">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Julius+Sans+One", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <!--[if IE 7]><%= stylesheet_link_tag 'font-awesome-ie7' %><![endif]-->
</head>
<body>
	<div class="container-fluid">
		<div id="site-container">
			<%= render partial: 'shared/header' %>
			<div id="content-container">
				<%= yield %>
			</div>
		</div>
		<%= render partial: 'shared/footer' %>
	</div>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script>window.jQuery || document.write("<script src=\"<%= asset_path 'jquery-1.9.1.js' %>\">\x3C/script>")</script>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <% if Rails.env.production? && ga_hash[:domain] && ga_hash[:ga_code] %>
    <script>
      var domain = <%= ga_hash[:domain] %>;
      var ga_code = <%= ga_hash[:ga_code] %>;
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', ga_code, domain);
      ga('send', 'pageview');
    </script>
  <% end %>
</body>
</html>
