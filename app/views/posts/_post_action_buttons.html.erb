<% if authenticated? && not_editing? %>
  <div class="post-action-buttons">
    <%= link_to 'Edit post', "/editor#{request.path}?editing_post_id=#{post.id}", class: 'btn btn-edit' if not_editing? %>
    <%= link_to 'Destroy', post_path(post), confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger post-delete-link-' + post.page.template  %>
  </div>
<% end %>
